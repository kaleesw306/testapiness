<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/black"
        android:id="@+id/app_bar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:id="@+id/pro_name"
            app:titleTextColor="@color/white"
            android:layout_height="wrap_content"/>
    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:id="@+id/wide_img"
        app:layout_constraintTop_toBottomOf="@id/app_bar"
        android:layout_height="@dimen/_180sdp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_100sdp"
        app:cardCornerRadius="@dimen/_100sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wide_img"
        android:layout_marginTop="-50dp"
        android:id="@+id/card"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_height="@dimen/_100sdp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <ImageView
               android:layout_width="@dimen/_100sdp"
               app:layout_constraintStart_toStartOf="parent"

             android:scaleType="fitCenter"
               android:id="@+id/square_img"
              android:padding="@dimen/_5sdp"
               android:layout_height="@dimen/_100sdp"/>
       </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/card"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textStyle="bold"
        android:textSize="@dimen/_15sdp"
        android:id="@+id/name_id"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/name_id"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textStyle="normal"
        android:textSize="@dimen/_18sdp"
        android:ellipsize="start"
        android:id="@+id/price_id"
        android:textColor="@color/teal_700"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/price_id"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textStyle="normal"
        android:textSize="@dimen/_13sdp"
        android:ellipsize="start"
        android:id="@+id/sold_count"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/sold_count"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textStyle="normal"
        android:textSize="@dimen/_13sdp"
        android:ellipsize="start"
        android:id="@+id/desc_id"
        android:textColor="#A9A9A9"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>